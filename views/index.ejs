<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1 class="text-center">All campgrounds</h1>
<% for (let cg of cgs) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= cg.images[0] ? cg.images[0].url : '' %>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body text-center h-100 d-flex flex-column justify-content-center">
                    <h5 class="card-title"><%= cg.name %></h5>
                    <p class="card-text"><%= cg.description %></p>
                    <p class="card-text">Price:&nbsp;<%= cg.price %></p>
                    <p>
                        <small class="card-text text-muted">Location:&nbsp;<%= cg.location %></small>
                    </p>
                    <a href="/campgrounds/<%= cg._id %>" class="btn btn-outline-primary w-25 mx-auto">Detail</a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    let cgs = {features: <%- JSON.stringify(cgs) %>};
    let token = '<%- process.env.MAPBOX_TOKEN %>';
</script>
<script src="/js/clusterMap.js"></script>

