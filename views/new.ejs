<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col offset-3">
        <form action="/campgrounds/new" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nameInput" class="form-label">Name:</label>
                <input type="text" name="name" id="nameInput" class="form-control" required>
                <div class="valid-feedback">Good!</div>
            </div>
            <div class="mb-3">
                <label for="imgInput" class="form-label">Image:</label>
                <input type="file" name="images" id="imgInput" class="form-control" accept="image/*" multiple>
            </div>
            <div class="mb-3">
                <label for="priceInput" class="form-label">Price:&nbsp;</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="number" class="form-control" id="priceInput" name="price" aria-label="Price" aria-describedby="basic-addon1" required>
                    <div class="valid-feedback">Good!</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="descInput" class="form-label">Description:</label>
                <textarea name="description" id="descInput" class="form-control" required></textarea>
                <div class="valid-feedback">Good!</div>
            </div>
            <div class="mb-3">
                <label for="locInput" class="form-label">Location:</label>
                <input type="text" name="location" id="locInput" class="form-control" required>
                <div class="valid-feedback">Good!</div>
            </div>
            <div>
                <input type="hidden" name="author" value="<%= currentUser._id %>">
            </div>
            <div class="mb-3">
                <button class="btn btn-outline-primary">Submit</button>
            </div>
        </form>
        <a class="btn btn-outline-secondary" href="/campgrounds">Back</a>
    </div>
</div>



